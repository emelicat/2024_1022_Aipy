   "source": [
    "scores = eval(input('請輸入學生分數(最高300分):'))\n",
    "\n",
    "is_add = input(\"學生是否符合加分條件?(y,n)\")\n",
    "if is_add == 'y':\n",
    "    scores *= 1.05\n",
    "    if(scores > 300):\n",
    "    scores = 300\n",
    "\n",
    "print(f\"學生的分數:{scores:.0f}\")"
   ]
